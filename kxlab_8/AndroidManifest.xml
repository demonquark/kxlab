            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" android:label="@string/other_activity_name" >
        </activity>
        <activity android:name="edu.bupt.trust.kxlab8.ServiceDetailActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" android:label="@string/details_activity_name" 
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name="edu.bupt.trust.kxlab8.ForumPostActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" android:label="@string/details_activity_name" 
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name="edu.bupt.trust.kxlab8.FindPasswordActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" android:label="@string/details_activity_name" 
            android:windowSoftInputMode="adjustPan">
