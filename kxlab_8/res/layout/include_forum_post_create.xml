<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content">
	
	<TextView android:id="@+id/forum_post_type" 
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge" 
		android:gravity="center" android:text="@string/forum_post_title" />
	<EditText android:id="@+id/forum_post_title"
	    android:layout_width="match_parent" android:layout_height="wrap_content"
		android:inputType="text" android:hint="@string/forum_post_title"
		android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/niets" />
	
</LinearLayout>
