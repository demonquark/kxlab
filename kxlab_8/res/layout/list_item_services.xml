<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_services"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/list_item_horizontal_padding"
    android:paddingRight="@dimen/list_item_horizontal_padding"
    android:paddingTop="@dimen/list_item_vertical_padding"
    android:paddingBottom="@dimen/list_item_vertical_padding" >
    
    <ImageView android:id="@android:id/icon1" android:scaleType="fitXY"  
        android:layout_width="@dimen/list_item_img_width"
        android:layout_height="@dimen/list_item_img_height" 
        android:layout_marginRight="@dimen/list_item_horizontal_padding" 
        android:src="@android:drawable/ic_menu_gallery"
        android:contentDescription="@string/niets" />
    
	<TextView android:id="@android:id/text1" android:textAppearance="?android:attr/textAppearanceMedium" 
		android:layout_width="wrap_content" android:layout_height="wrap_content"
    	android:layout_toRightOf="@android:id/icon1" android:layout_alignParentTop="true" 
    	android:layout_marginBottom="@dimen/list_item_horizontal_padding" />
	
	<TextView android:id="@android:id/text2" android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_toRightOf="@android:id/icon1" android:layout_below="@android:id/text1" 
		android:layout_alignStart="@android:id/text1" />
	
</RelativeLayout>
