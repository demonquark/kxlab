<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="right" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content" 
    android:background="@drawable/forum_reply_create_bg">
	
	<LinearLayout android:id="@+id/forum_reply_holder" android:orientation="horizontal"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:padding="@dimen/list_item_horizontal_padding"
		android:background="@drawable/forum_reply_create_owner_bg">
		<TextView android:id="@android:id/text1" 
			android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
			android:textSize="@dimen/list_person_text"
			android:gravity="left" android:text="@string/forum_reply_owner" />
		<TextView android:id="@android:id/text2" 
			android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
			android:textSize="@dimen/list_person_text" 
			android:gravity="right" android:text="@string/forum_reply_postdate" />
	</LinearLayout>
    
	<TextView android:id="@android:id/content" 
		android:padding="@dimen/list_item_horizontal_padding"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall" 
		android:gravity="left|top" android:text="@string/forum_reply_text" />
</LinearLayout>
