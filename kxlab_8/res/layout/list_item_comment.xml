<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

	<RelativeLayout android:id="@+id/comment_owner_holder"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/list_item_vertical_margin"
		android:background="@drawable/setbar_bg" >

		<ImageView android:id="@+id/comment_owner_img"
			android:layout_width="@dimen/list_person_img_width"
			android:layout_height="@dimen/list_person_img_height"
			android:layout_marginLeft="@dimen/list_item_horizontal_margin"
			android:layout_marginRight="@dimen/list_item_horizontal_margin"
			android:contentDescription="@string/comment_owner_img"
			android:layout_alignParentLeft="true"
			android:src="@drawable/ic_launcher" />

		<TextView android:id="@+id/comment_owner_name" 
			android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="@dimen/list_person_text" android:text="@string/comment_owner_name"
			android:paddingTop="@dimen/list_item_vertical_padding"
            android:layout_alignParentTop="true" android:layout_toRightOf="@id/comment_owner_img" />

		<TextView android:id="@+id/comment_owner_time"
		    android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="@dimen/list_person_text" android:text="@string/comment_owner_time"
			android:paddingLeft="@dimen/list_person_horizontal_padding" 
			android:paddingTop="@dimen/list_item_vertical_padding"
			android:layout_alignParentTop="true" android:layout_toRightOf="@id/comment_owner_name"
			android:layout_marginRight="@dimen/list_person_horizontal_padding" 
			android:layout_alignParentRight="true" android:gravity="right" />

		<TextView android:id="@+id/comment_owner_score_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="@dimen/list_person_text" android:text="@string/comment_owner_score" 
			android:paddingBottom="@dimen/list_item_vertical_padding" android:paddingRight="@dimen/list_text_spacing"
			android:layout_toRightOf="@id/comment_owner_img" android:layout_alignBottom="@id/comment_owner_img" />
		
		<TextView android:id="@+id/comment_owner_score_text"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="@dimen/list_person_text" android:text="@string/ellipsis" 
			android:paddingBottom="@dimen/list_item_vertical_padding"
			android:layout_toRightOf="@id/comment_owner_score_title" android:layout_alignBottom="@id/comment_owner_img" />
		
		<TextView android:id="@+id/comment_score_text"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="@dimen/list_person_text" android:text="@string/ellipsis" 
			android:paddingBottom="@dimen/list_item_vertical_padding" android:layout_alignBottom="@id/comment_owner_img"
			android:layout_marginRight="@dimen/list_person_horizontal_padding" 
			android:layout_alignParentRight="true" android:gravity="right" />
		
		<TextView android:id="@+id/comment_score_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="@dimen/list_person_text" android:text="@string/comment_score" 
			android:paddingBottom="@dimen/list_item_vertical_padding"
			android:layout_toLeftOf="@id/comment_score_text" android:layout_alignBottom="@id/comment_owner_img"
			android:paddingRight="@dimen/list_text_spacing" android:gravity="right" />
		
	</RelativeLayout>

	<TextView android:id="@android:id/text1" 
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:textSize="@dimen/list_person_text" android:text="@string/ellipsis"
		android:layout_marginLeft="@dimen/list_item_horizontal_margin" 
		android:layout_marginRight="@dimen/list_item_horizontal_margin"
		android:gravity="left" android:layout_marginBottom="@dimen/list_item_vertical_margin" />

	<LinearLayout android:id="@+id/comment_reply_holder" android:orientation="horizontal"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/list_item_horizontal_margin" 
		android:gravity="right" android:layout_marginBottom="@dimen/list_item_vertical_margin" >

	    <ImageButton android:id="@+id/comment_btn_reply"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:src="@drawable/detail_comment_normal" android:contentDescription="@string/niets" />
	</LinearLayout>
		
</LinearLayout>
