<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/forum_reply_create_bg">
	<LinearLayout android:id="@+id/forum_reply_holder" android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:background="@drawable/forum_reply_create_owner_bg"
		android:padding="@dimen/list_item_horizontal_padding" >
	<LinearLayout android:orientation="horizontal"
		android:layout_width="match_parent" android:layout_height="wrap_content">
		<TextView android:id="@android:id/text1" 
			android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall" 
			android:gravity="left" android:text="@string/forum_reply_owner" />
		<TextView android:id="@android:id/text2" 
			android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall" 
			android:gravity="right" android:text="@string/forum_reply_postdate" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal" android:layout_gravity="right"
		android:layout_width="wrap_content" android:layout_height="wrap_content" >
		<TextView android:id="@+id/comment_score_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="@dimen/list_person_text" android:text="@string/comment_score" />
	    <TextView android:id="@android:id/title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="@dimen/list_person_text" android:text="@string/ellipsis" 
			android:paddingLeft="@dimen/list_text_spacing" />
	</LinearLayout>
	</LinearLayout>
    
	<TextView android:id="@android:id/content" 
		android:background="@color/white"
		android:padding="@dimen/list_item_horizontal_padding"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall" 
		android:gravity="left|top" android:text="@string/forum_reply_text" />
</LinearLayout>